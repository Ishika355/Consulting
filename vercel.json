{
  "builds": [
    { "src": "/public/index.html", "use": "@vercel/static" },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "rewrites": [
    {
         "source": "/", "destination": "/public/index.html" 
}
  ],
  "headers": [
    {
      "source": "public/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}

 

